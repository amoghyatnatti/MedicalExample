

@model MedicalExample.Models.PatientOverview

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientInfo.DOB)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientInfo.DOB)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientInfo.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientInfo.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientInfo.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientInfo.LastName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PatientInfo.PatientId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h1>Diagnoses</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.DiagnosesList.First().Diagnosis)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DiagnosesList.First().Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DiagnosesList.First().Specialty)
			</th>

		</tr>
	</thead>
    <tbody>
        @foreach (var item in Model.DiagnosesList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Diagnosis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty)
                </td>
            </tr>
        }
    </tbody>
</table>
